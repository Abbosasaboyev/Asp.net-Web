@model WebApplication1.ViewModels.LoginViewModel


<h2 class="login_title">Вход в приложение</h2>
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="login">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input placeholder="Email" asp-for="Email" class="login_email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <input placeholder="Введите пароль" asp-for="Password" class="login_pass" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="RememberMe"></label><br />
        <input asp-for="RememberMe" />
    </div>
    <div class="login_container">
        <div>
            <input class="login_btn" type="submit" value="Войти" />
        </div>
        <a class="login_btn" asp-action="Register">Регистрация</a>
    </div>
</form>
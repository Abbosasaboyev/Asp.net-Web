            <div class="container_item-btns">
                <a class="item_btns-view">View</a>
                <a class="item_btns-edit">Edit</a>
            </div>
        </div>
        <div class="cards_container-item">
            <img src="~/img/california_h.jpeg" width="360" height="227" alt="1" class="container_item-img">
